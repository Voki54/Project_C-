@using Project_Manager.ViewModels;
@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="row d-flex align-items-center justify-content-center">
    <div class="accountCont">
        <h2 class="text-center">Войти в аккаунт</h2>
        <form asp-action="Login" method="post" class="accountForm" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-1 mt-1">
                <label asp-for="Username" class="control-label">Имя пользователя</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-1 mt-3">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-1 form-check">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" /> Запомнить?
                </label>
            </div>
            <div class="row">
                <div class="col-8">
                    <a asp-action="Register" class="text-decoration-none float-start mt-3 acccheck" asp-route-returnurl="@ViewData["ReturnUrl"]">Нет аккаунта?</a>
                </div>
                <div class="col-4">
                    <input type="submit" value="Войти" class="btn btn-primary btn-sm float-end" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}