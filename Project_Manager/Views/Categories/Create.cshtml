@model Project_Manager.Models.Category

@{
    ViewData["Title"] = "Создание категории";
}

<h2>Создать категорию</h2>

<form class="formCreate" asp-action="Create" method="post">
    <input type="hidden" name="projectId" value="@ViewBag.ProjectId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название категории</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
    <a href="@Url.Action("Index", "ProjectTasks", new{ projectId = ViewBag.ProjectId})" class="btn btn-secondary">Назад</a>
</form>