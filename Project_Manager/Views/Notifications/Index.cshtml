@using Project_Manager.DTO.Notification
@model IEnumerable<NotificationDTO>

@{
    ViewData["Title"] = "Уведомления";
}

<p>
    <a asp-action="">Удалить все</a>
</p>
<hr />
<table class="table">
    <thead>
        <tr>
            @* <th>
            @Html.DisplayNameFor(model => model.Name)
            </th> *@

            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>У вас нет уведомлений</tr>
        }
        else
        {
            foreach (var notification in Model)
            {
                <tr>
                    <td>
                        @notification.Message
                        @* <a href="@Url.Action("Index", "ProjectTasks", new { projectId = project.Id })">@Html.DisplayFor(modelItem => project.Name)</a> *@
                    </td>
                    <td>
                        @notification.SendDate
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@* @project.Id *@">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
