@model Project_Manager.ViewModels.TaskCategoryVM

<div class="row">
    <!-- Левый столбец с категориями -->
    <div class="category-list">
        <h5>Категории</h5>
        <ul class="list-group">
            <li class="list-group-item @(Model.SelectedCategory == null ? "active" : "")">
                <a href="@Url.Action("Index")" class="text-decoration-none">Все категории</a>
            </li>
            @foreach (var category in Model.Categories)
            {
                <li class="list-group-item @(category.Id == Model.SelectedCategory?.Id ? "active" : "")">
                    <a href="@Url.Action("Index", new { categoryId = category.Id })" class="text-decoration-none">
                        @category.Name
                    </a>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <!-- Кнопка Редактировать -->
                        <a href="@Url.Action("Edit", "Categories", new { id = category.Id })" class="btn btn-edit1">Редактировать</a>

                        <!-- Кнопка Удалить -->
                        <form asp-action="DeleteConfirmed" asp-controller="Categories" asp-route-id="@category.Id" method="post" style="display:inline;" onsubmit="return confirm('Вы уверены, что хотите удалить эту категорию?');">
                            <button type="submit" class="btn btn-delete1">Удалить</button>
                        </form>
                    </div>
                </li>
            }
        </ul>
        <a href="@Url.Action("Create", "Categories")" class="btn btn-add btn-add-category">Добавить категорию</a>
    </div>


    <!-- Правый столбец с задачами -->
    <div class="task-list">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5>Задачи</h5>
            <a href="@Url.Action("Create", new { categoryId = Model.SelectedCategory?.Id })" class="btn btn-add">Добавить задачу</a>
        </div>

        @if (Model.Tasks != null && Model.Tasks.Any())
        {
            <table class="table task-table">
                <thead>
                    <tr>
                        <th>
                            <a href="@Url.Action("Index", new { sortColumn = "Title" })">
                                <div>Название @(Model.SortedColumn == "Title" ? (Model.IsAsc == true ? "↑" : "↓") : "")</div>
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { sortColumn = "Status" })">
                                <div>Статус @(Model.SortedColumn == "Status" ? (Model.IsAsc == true ? "↑" : "↓") : "")</div>
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { sortColumn = "Category" })">
                                <div>Категория @(Model.SortedColumn == "Category" ? (Model.IsAsc == true ? "↑" : "↓") : "")</div>
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { sortColumn = "ExecutorName" })">
                                <div>Исполнитель @(Model.SortedColumn == "ExecutorName" ? (Model.IsAsc == true ? "↑" : "↓") : "")</div>
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { sortColumn = "DueDateTime" })">
                                <div>Дедлайн @(Model.SortedColumn == "DueDateTime" ? (Model.IsAsc == true ? "↑" : "↓") : "")</div>
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { sortColumn = "Description" })">
                                <div>Описание @(Model.SortedColumn == "Description" ? (Model.IsAsc == true ? "↑" : "↓") : "")</div>
                            </a>
                        </th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.Tasks)
                    {
                        <tr class="task-tr">
                            <td>@task.Title</td>
                            <td>
                                <span class="status-label @task.Status.ToString().ToLower()">
                                    @task.Status.ToString().ToLower()
                                </span>
                            </td>
                            <td>@task.Category.Name</td>
                            <td>@(task.ExecutorName != null ? task.ExecutorName : "Не назначен")</td>
                            <td>@task.DueDateTime.ToShortDateString()</td>
                            <td class="description">@task.Description</td>
                            <td>
                                <a href="@Url.Action("ViewTask", new { id = task.Id })" class="btn btn-view">Просмотр</a>
                                <a href="@Url.Action("Edit", new { id = task.Id })" class="btn btn-edit">Редактировать</a>
                                <form asp-action="DeleteConfirmed" asp-route-id="@task.Id" method="post" style="display:inline;" onsubmit="return confirm('Вы уверены, что хотите удалить эту задачу?');">
                                    <button type="submit" class="btn btn-delete">Удалить</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info mt-3">В данной категории нет задач.</div>
        }
    </div>
</div>
