@model Project_Manager.ViewModels.CreateAndEditProjectVM

@{
    ViewData["Title"] = "Создание проекта";
}

<h2>Создание проекта</h2>

<form class="formCreate" asp-antiforgery="true" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <input type="submit" value="Создать" class="btn btn-primary" />
    <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary exit">Назад</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

