@model Project_Manager.ViewModels.CreateAndEditProjectVM

@{
    ViewData["Title"] = "Изменить проект";
}


<a asp-controller="ProjectTasks" asp-action="Index" asp-route-projectId="@Model.Id">Отмена</a>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-antiforgery="true" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Id" type="hidden" value="@Model.Id" />
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
                <button class="btn btn-danger btn-exclude-participant" type="button" onclick="window['confirm-exclusion'].showModal()">
                    Удалить проект
                </button>
            </div>
        </form>
    </div>
</div>

<dialog class="dialog" id="confirm-exclusion" aria-labelledby="dialog-name">
    <h4 class="dialog__title" id="dialog-name">
        Вы уверены, что хотите удалить проект @Model.Name?<br />
        Отменить действие будет невозможно.
    </h4>
    <form asp-action="Delete" method="post" id="exclusion-form">
        <input type="hidden" name="projectId" value="@Model.Id"/>
        <button type="submit" class="btn btn-danger">Удалить</button>
        <button type="button" onclick="window['confirm-exclusion'].close()">Отмена</button>
    </form>
</dialog>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}